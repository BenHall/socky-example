<% form_tag chat_path, :method => :get do %>
  <p>
    <%= label_tag :client_id, "Client ID" %>
    <%= text_field_tag :client_id %>
  </p>
  <p>
    <%= label_tag :client_secret, "Client secret" %>
    <%= text_field_tag :client_secret %>
  </p>
  <p>
    <%= label_tag :channels, "Channels(comma separated)" %>
    <%= text_field_tag :channels %>
  </p>
  <p>
    <%= submit_tag "Enter" %>
  </p>
<% end %>
