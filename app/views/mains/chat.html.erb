<% content_for :head do %>
  <%= socky :client_id => params[:client_id], :client_secret => params[:client_secret], :channels => params[:channels] %>
<% end %>

<div id="chat">
  <div id="messages"></div>
  <a href="/" id="logout">Logout</a>
  <% form_remote_tag :url => message_socky_path do %>
    <%= hidden_field_tag :current_user, params[:client_id] %>
    Message
    <%= text_field_tag :message %>
    Client IDS(comma separated)
    <%= text_field_tag :client_ids %>
    Channels(comma separated)
    <%= text_field_tag :channels %>
    <%= submit_tag "Send message" %>
  <% end %>
</div>