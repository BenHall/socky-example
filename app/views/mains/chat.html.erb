<% content_for :head do %>
  <%= socky :client_id => params[:login] %>
<% end %>

<div id="chat">
  <h1>Socky Chat</h1>
  <div id="messages_container">
    <ul id="messages">
    </ul>
  </div>
  <div id="message_form_container">
    <a href="/" id="logout">Logout</a>
    <%= form_tag message_socky_path, :remote => true do %>
      <%= hidden_field_tag :current_user, params[:login] %>
      <%= text_field_tag :message %>
      <%= submit_tag "Send message" %>
    <% end %>
  </div>
</div>